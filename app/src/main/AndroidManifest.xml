            android:screenOrientation="portrait"/>
        <activity android:name="NewRoundActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="HighestBidderActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="WaitAnswerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="AnswerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="WaitReviewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="ReviewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="ReviewAnswersActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="DeterminePointsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="PlayerWonActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="UpdatePointsActivity"
            android:screenOrientation="portrait"/>
